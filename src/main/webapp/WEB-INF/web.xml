<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ERS_System</display-name>
  
  
  <servlet>
		<servlet-name>AuthenticationServlet</servlet-name>
		<servlet-class>com.revature.servlets.AuthenticationServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AuthenticationServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>EmployeeServlet</servlet-name>
		<servlet-class>com.revature.servlets.EmployeeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/employee</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>FinanceServlet</servlet-name>
		<servlet-class>com.revature.servlets.FinanceServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>FinanceServlet</servlet-name>
		<url-pattern>/finance</url-pattern>
	</servlet-mapping>
</web-app>